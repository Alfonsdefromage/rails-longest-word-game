<div class="container">
  <div class="shadow my-3 py-3">
    <h1>New Game</h2>
  </div>
  <div class="shadow py-3">
    <ul>
      <% @letters.each do |letter| %>
      <li class="shadow h1 d-inline p-4 bg-primary text-white"><%=letter%></li>
      <%end%>
    </ul>
  </div>
  <div class="my-3 py-3">
    <h2>What is the longest word you can find?</h2>
    <form action="/score" method="post" data-turbo="false" class="input-group">
      <input type="text" class="form-control form-control-lg" name="word">
      <input value="Submit!" type="submit" class="btn btn-primary input-group-append">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
    </form>
  </div>
</div>
